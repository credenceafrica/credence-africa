
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to insights
    match /insights/{insightId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    match /insights/{insightId}/comments/{commentId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if request.auth != null;
    }

    // Allow authenticated users to manage consultation requests
    match /consultations/{consultationId} {
      allow read, delete: if request.auth != null;
      allow create: if true;
    }

    // Allow authenticated users to manage case study access requests
    match /caseStudyAccessRequests/{requestId} {
      allow read, delete: if request.auth != null;
      allow create: if true;
    }
  }
}
