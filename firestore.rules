
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Insights can be read by anyone, but only created/updated/deleted by admins.
    match /insights/{insightId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;

      // Comments subcollection rules
      match /comments/{commentId} {
        // Anyone can create a comment, but it must be marked as not approved.
        allow create: if request.resource.data.approved == false;
        // Only authenticated users (admins) can update (approve) or delete comments.
        allow update, delete: if request.auth != null;
        // Anyone can read approved comments, admins can read all.
        allow read: if resource.data.approved == true || request.auth != null;
      }
    }

    // Consultation requests can be created by anyone, but only read/deleted by admins.
    match /consultations/{consultationId} {
      allow create: if true;
      allow read, delete: if request.auth != null;
    }

    // Case study access requests can be created by anyone, but only read/deleted by admins.
    match /caseStudyAccessRequests/{requestId} {
      allow create: if true;
      allow read, delete: if request.auth != null;
    }
  }
}
