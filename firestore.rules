rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to insights, and authenticated writes
    match /insights/{insightId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Allow anyone to create a consultation request, but only authenticated users to read or delete them.
    match /consultations/{consultationId} {
      allow create: if true;
      allow read, delete: if request.auth != null;
    }

    // Allow anyone to create a case study access request, but only authenticated users to read or delete them.
    match /caseStudyAccessRequests/{requestId} {
      allow create: if true;
      allow read, delete: if request.auth != null;
    }
  }
}
