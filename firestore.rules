
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Insights can be read by anyone. Admins can write them.
    match /insights/{insightId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Rules for the 'comments' collection group query used in admin.
    match /{path=**}/comments/{commentId} {
        // Admins can read, update, delete all comments.
        allow read, update, delete: if request.auth != null;
    }
    
    // Public rules for comments within an insight.
    match /insights/{insightId}/comments/{commentId} {
      // Anyone can create a comment, but it must start as unapproved.
      allow create: if request.resource.data.approved == false;
      // Public can only read approved comments.
      allow read: if resource.data.approved == true;
    }

    // Consultation requests
    match /consultations/{consultationId} {
      // Anyone can create a request.
      allow create: if true;
      // Only admins can manage them.
      allow read, write: if request.auth != null;
    }
    
    // Case Study requests
    match /caseStudyAccessRequests/{requestId} {
      // Anyone can create a request.
      allow create: if true;
      // Only admins can manage them.
      allow read, write: if request.auth != null;
    }
  }
}
